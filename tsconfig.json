{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "node_modules/chrome-types/*"
  ]
}
